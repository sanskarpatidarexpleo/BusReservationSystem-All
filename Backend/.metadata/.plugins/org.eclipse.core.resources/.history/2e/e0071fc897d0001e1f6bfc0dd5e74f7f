package com.expleo.busReservationSystem.services;

import java.util.Date;
import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import com.expleo.busReservationSystem.db.TravelBookingRepository;
import com.expleo.busReservationSystem.entites.BookingsEntity;
import com.expleo.busReservationSystem.entites.TravelBookingsEntity;

@Service
public class TravelsBookingService {

	@Autowired
	TravelBookingRepository repository;
	
	public List<TravelBookingsEntity> getAllTravelBooking(Date todayDate){
		return repository.findAllByDate(todayDate);
	}
	
	public boolean setTravelBooked(BookingsEntity bookingsEntity) {
		TravelBookingsEntity travelBookingEntity = new TravelBookingsEntity(bookingsEntity.getTravelId() , bookingsEntity.getUserId() , bookingsEntity.getDate());;
		if(repository.save(travelBookingEntity) != null)
			return true;
		else
			return false;
	}
	
	public boolean deleteTravelBooked(BookingsEntity entity) {
		if(repository.findBySomeProperty(entity.getUserId(), entity.getTravelId(), entity.getDate()) > 0)
			return true;
		else
			return false;
	}
}
